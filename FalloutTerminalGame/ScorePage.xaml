<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FalloutTerminalGame.ScorePage">
    <VerticalStackLayout>
        <StackLayout Padding="20">
            <!-- Display the best score at the top -->
            <Label x:Name="lblBestScore" Text="Best Score: 0" FontSize="Large" HorizontalOptions="Center" Margin="0,10,0,20"/>
            <!-- Scoreboard Title -->
            <Label Text="Scoreboard" FontSize="Medium" HorizontalOptions="Center" Margin="0,0,0,10"/>
            <!-- Scoreboard List -->
            <Label x:Name="lblScoreboard" FontSize="Medium" HorizontalOptions="Center" Margin="0,0,0,10"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>