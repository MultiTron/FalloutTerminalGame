<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FalloutTerminalGame.LoginPage"
             Title="LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Label Text="Login" FontSize="32" HorizontalOptions="Center"/>
            <Entry x:Name="txtUsername" Placeholder="Username" Margin="0, 20, 0, 0"/>
            <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"/>
            <Button x:Name="btnSubmit" Text="Login" BackgroundColor="#4CAF50" TextColor="White" Margin="0, 20, 0, 0" Clicked="btnSubmit_Clicked"/>
            <Label x:Name="lblError" TextColor="Red" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>